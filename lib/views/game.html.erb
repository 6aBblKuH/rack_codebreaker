<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="/src/css/materialize/materialize.min.css"/>
    <link rel="stylesheet" href="/src/css/custom/custom.css">
    <title>Codebreaker</title>
  </head>
  <body>
    <div class='container'>
      <div class="row bordered-block">
        <div class="col l8 center-block center-align">
          <div class="row">
            <div class="row">
              <% if helper.game_data %>
              <p class="flow-text">
                You have got
                <%= helper.game_data['attempts'] %>
                attempts and
                <%= helper.game_data['hints'].size %>
                hints
              </p>
              <% end %>
            </div>
            <div class="row">
              <div class="col l6 offset-l3">
                <div class="row">
                  <form method="post" action="/guess">
                    <div class="input-field col s12">
                      <label for="user-input">Type your guess</label>
                      <input type="text" id="user-input" placeholder="1234" name="user-code" required>
                      <% if request.cookies['validation_error'] %>
                      <p class="center-align red-text">4-digit number. Every digit has value between 1 and 6</p>
                      <% end %>
                    </div>
                    <div class="input-field col s12 text-center">
                      <div class="row center-align">
                        <div class="col l4 offset-l<%= helper.game.hints.empty? ? '4' : '2' %>">
                          <button class="waves-effect waves-light btn darken-3" type="submit">Check</button>
                        </div>
                        <% unless helper.game.hints.empty? %>
                        <div class="col l4">
                          <a href="/hint" class="waves-effect waves-light btn darken-3">Hint</a>
                        </div>
                        <% end %>
                      </div>
                    </div>
                  </form>
                </div>
              </div>
            </div>

            <div class="row">
              <% unless helper.guesses.empty? %>
              <div class="col l6 offset-l1">
                <table class="bordered guesses highlight">
                  <thead>
                    <tr>
                      <th>Guess</th>
                      <th>Code</th>
                      <th>Matching</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% helper.guesses.each_with_index do |guess, index| %>
                      <tr>
                        <td><%= index + 1 %></td>
                        <td><%= guess['user_code'] %></td>
                        <td><%= guess['match'] %></td>
                      </tr>
                    <% end %>
                  </tbody>
                </table>
              </div>
              <% end %>

              <% unless helper.used_hints.empty? %>
              <div class="col l3">
                <table class="bordered guesses highlight">
                  <thead>
                    <tr>
                      <th>Hint</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% helper.used_hints.each_with_index do |hint, index| %>
                      <tr>
                        <td><%= hint %></td>
                      </tr>
                    <% end %>
                  </tbody>
                </table>
              </div>
              <% end %>
            </div>

          </div>
        </div>
      </div>
    </div>

    <script src="/src/js/jquery-3.2.1.min.js"></script>
    <script src="/src/js/materialize.min.js"></script>
    <script src="/src/js/script.js"></script>
  </body>
</html>
